-- Macro properties that are parameters
-- should be in parameters

macro macro1()
   media mName
      type: "text/html"
      left: leftValue
   end
end

*macro1()

macro macroLink(condition, conditionMedia, action, actionMedia)
   condition mediaCondition do
      action mediaAction end
   end
end

media media1
   type: "text/html"
end
media media2
   type: "text/html"
end
*macroLink("onBegin", "media1", "start", "media2")
