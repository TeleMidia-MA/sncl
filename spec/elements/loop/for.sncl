images = {i1, i2, i3}
sources = {"images/img1.jpg",
         "images/img2.jpg",
         "images/img3.jpg"}

for a in #images and b in #sources do
   media images[a]
      src: sources[b]
   end
end

for a in #images do
   onEnd images[a] do
      start images[a+1] end
   end
end
